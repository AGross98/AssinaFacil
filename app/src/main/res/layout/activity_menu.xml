<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MenuActivity">

    <Button
        android:id="@+id/menu_registrar_jornada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Jornada"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/menu_historico_jornada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hostorico de Jornada"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/menu_registrar_jornada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/menu_assinar_cartao_ponto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hostorico de Jornada"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/menu_historico_jornada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/menu_visualizar_holerite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hostorico de Jornada"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/menu_assinar_cartao_ponto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>